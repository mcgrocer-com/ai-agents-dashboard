{
  "templateName": "service-integration",
  "description": "Template for third-party service integrations",
  "version": "1.0.0",
  "variables": [
    {
      "name": "SERVICE_NAME",
      "description": "Service name (e.g., twilio, sendgrid, aws)",
      "required": true
    },
    {
      "name": "AUTH_TYPE",
      "description": "Authentication type (api_key, oauth, jwt)",
      "required": true
    },
    {
      "name": "CREDENTIALS",
      "description": "Service credentials object",
      "required": true,
      "secure": true
    },
    {
      "name": "REGION",
      "description": "Service region if applicable",
      "required": false
    },
    {
      "name": "ENVIRONMENT",
      "description": "Environment (production, staging, development)",
      "required": false,
      "default": "production"
    }
  ],
  "mcpConfig": {
    "command": "cmd",
    "args": [
      "/c",
      "npx",
      "-y",
      "@custom/{{SERVICE_NAME}}-mcp-server",
      "--env={{ENVIRONMENT}}"
    ],
    "env": {
      "{{SERVICE_NAME_UPPER}}_CREDENTIALS": "{{CREDENTIALS}}",
      "{{SERVICE_NAME_UPPER}}_REGION": "{{REGION}}"
    }
  },
  "methods": [
    {
      "name": "{{SERVICE_NAME}}_send",
      "description": "Send data via {{SERVICE_NAME}}",
      "parameters": {
        "type": {
          "type": "string",
          "description": "Type of data to send"
        },
        "payload": {
          "type": "object",
          "description": "Data payload"
        },
        "options": {
          "type": "object",
          "description": "Additional options",
          "optional": true
        }
      }
    },
    {
      "name": "{{SERVICE_NAME}}_receive",
      "description": "Receive/fetch data from {{SERVICE_NAME}}",
      "parameters": {
        "type": {
          "type": "string",
          "description": "Type of data to receive"
        },
        "filters": {
          "type": "object",
          "description": "Filter criteria",
          "optional": true
        }
      }
    },
    {
      "name": "{{SERVICE_NAME}}_webhook",
      "description": "Handle {{SERVICE_NAME}} webhooks",
      "parameters": {
        "event": {
          "type": "string",
          "description": "Webhook event type"
        },
        "data": {
          "type": "object",
          "description": "Webhook payload"
        }
      }
    },
    {
      "name": "{{SERVICE_NAME}}_status",
      "description": "Check {{SERVICE_NAME}} service status",
      "parameters": {
        "resource": {
          "type": "string",
          "description": "Resource to check",
          "optional": true
        }
      }
    },
    {
      "name": "{{SERVICE_NAME}}_configure",
      "description": "Configure {{SERVICE_NAME}} settings",
      "parameters": {
        "settings": {
          "type": "object",
          "description": "Configuration settings"
        }
      }
    }
  ],
  "serviceTypes": {
    "communication": {
      "examples": ["twilio", "sendgrid", "mailgun", "slack"],
      "additionalMethods": [
        {
          "name": "{{SERVICE_NAME}}_send_message",
          "description": "Send message via service",
          "parameters": {
            "to": "string",
            "message": "string",
            "from": "string"
          }
        }
      ]
    },
    "payment": {
      "examples": ["stripe", "paypal", "square", "razorpay"],
      "additionalMethods": [
        {
          "name": "{{SERVICE_NAME}}_process_payment",
          "description": "Process payment transaction",
          "parameters": {
            "amount": "number",
            "currency": "string",
            "customer": "object"
          }
        }
      ]
    },
    "storage": {
      "examples": ["aws-s3", "google-cloud-storage", "azure-blob"],
      "additionalMethods": [
        {
          "name": "{{SERVICE_NAME}}_upload",
          "description": "Upload file to storage",
          "parameters": {
            "bucket": "string",
            "key": "string",
            "file": "buffer"
          }
        },
        {
          "name": "{{SERVICE_NAME}}_download",
          "description": "Download file from storage",
          "parameters": {
            "bucket": "string",
            "key": "string"
          }
        }
      ]
    },
    "analytics": {
      "examples": ["google-analytics", "mixpanel", "segment", "amplitude"],
      "additionalMethods": [
        {
          "name": "{{SERVICE_NAME}}_track_event",
          "description": "Track analytics event",
          "parameters": {
            "event": "string",
            "properties": "object",
            "user": "string"
          }
        }
      ]
    }
  },
  "examples": {
    "twilio": {
      "SERVICE_NAME": "twilio",
      "AUTH_TYPE": "api_key",
      "CREDENTIALS": "{\"account_sid\":\"AC...\",\"auth_token\":\"...\"}",
      "ENVIRONMENT": "production"
    },
    "aws-s3": {
      "SERVICE_NAME": "aws-s3",
      "AUTH_TYPE": "api_key",
      "CREDENTIALS": "{\"access_key\":\"AKIA...\",\"secret_key\":\"...\"}",
      "REGION": "us-east-1",
      "ENVIRONMENT": "production"
    },
    "sendgrid": {
      "SERVICE_NAME": "sendgrid",
      "AUTH_TYPE": "api_key",
      "CREDENTIALS": "{\"api_key\":\"SG...\"}",
      "ENVIRONMENT": "production"
    }
  }
}