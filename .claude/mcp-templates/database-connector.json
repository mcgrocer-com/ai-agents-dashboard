{
  "templateName": "database-connector",
  "description": "Template for database connections and operations",
  "version": "1.0.0",
  "variables": [
    {
      "name": "DB_TYPE",
      "description": "Database type (postgresql, mysql, mongodb, redis)",
      "required": true
    },
    {
      "name": "HOST",
      "description": "Database host",
      "required": true
    },
    {
      "name": "PORT",
      "description": "Database port",
      "required": true
    },
    {
      "name": "DATABASE",
      "description": "Database name",
      "required": true
    },
    {
      "name": "USER",
      "description": "Database user",
      "required": true
    },
    {
      "name": "PASSWORD",
      "description": "Database password",
      "required": true,
      "secure": true
    },
    {
      "name": "SSL",
      "description": "Use SSL connection",
      "required": false,
      "default": "true"
    }
  ],
  "mcpConfig": {
    "command": "npx",
    "args": [
      "-y",
      "@custom/{{DB_TYPE}}-mcp-server",
      "--host={{HOST}}",
      "--port={{PORT}}",
      "--database={{DATABASE}}",
      "--ssl={{SSL}}"
    ],
    "env": {
      "{{DB_TYPE_UPPER}}_USER": "{{USER}}",
      "{{DB_TYPE_UPPER}}_PASSWORD": "{{PASSWORD}}"
    }
  },
  "methods": [
    {
      "name": "{{DB_TYPE}}_query",
      "description": "Execute query on {{DB_TYPE}} database",
      "parameters": {
        "query": {
          "type": "string",
          "description": "SQL/NoSQL query to execute"
        },
        "params": {
          "type": "array",
          "description": "Query parameters",
          "optional": true
        }
      }
    },
    {
      "name": "{{DB_TYPE}}_list_tables",
      "description": "List all tables/collections",
      "parameters": {
        "schema": {
          "type": "string",
          "description": "Schema name",
          "optional": true
        }
      }
    },
    {
      "name": "{{DB_TYPE}}_describe_table",
      "description": "Get table/collection schema",
      "parameters": {
        "table": {
          "type": "string",
          "description": "Table/collection name"
        }
      }
    },
    {
      "name": "{{DB_TYPE}}_insert",
      "description": "Insert data into table/collection",
      "parameters": {
        "table": {
          "type": "string",
          "description": "Table/collection name"
        },
        "data": {
          "type": "object",
          "description": "Data to insert"
        }
      }
    },
    {
      "name": "{{DB_TYPE}}_update",
      "description": "Update data in table/collection",
      "parameters": {
        "table": {
          "type": "string",
          "description": "Table/collection name"
        },
        "filter": {
          "type": "object",
          "description": "Filter conditions"
        },
        "data": {
          "type": "object",
          "description": "Update data"
        }
      }
    },
    {
      "name": "{{DB_TYPE}}_delete",
      "description": "Delete data from table/collection",
      "parameters": {
        "table": {
          "type": "string",
          "description": "Table/collection name"
        },
        "filter": {
          "type": "object",
          "description": "Filter conditions"
        }
      }
    },
    {
      "name": "{{DB_TYPE}}_transaction",
      "description": "Execute transaction",
      "parameters": {
        "operations": {
          "type": "array",
          "description": "List of operations to execute"
        }
      }
    }
  ],
  "examples": {
    "postgresql": {
      "DB_TYPE": "postgresql",
      "HOST": "db.example.com",
      "PORT": "5432",
      "DATABASE": "production",
      "USER": "app_user",
      "PASSWORD": "secure_password",
      "SSL": "true"
    },
    "mongodb": {
      "DB_TYPE": "mongodb",
      "HOST": "cluster.mongodb.net",
      "PORT": "27017",
      "DATABASE": "app_db",
      "USER": "mongo_user",
      "PASSWORD": "secure_password",
      "SSL": "true"
    },
    "mysql": {
      "DB_TYPE": "mysql",
      "HOST": "mysql.example.com",
      "PORT": "3306",
      "DATABASE": "myapp",
      "USER": "mysql_user",
      "PASSWORD": "secure_password",
      "SSL": "false"
    }
  }
}